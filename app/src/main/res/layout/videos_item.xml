<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_item_height"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_action_play"
        android:drawableLeft="@drawable/ic_action_play"
        android:drawablePadding="@dimen/drawable_text_view_padding"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        tools:text="Sample video name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerOnLightBackground"/>

</RelativeLayout>